{
    "name": "Put.io Extension",
    "short_name": "putio",
    "version": "2.3.8",
    "manifest_version": 2,
    "description": "Extension for put.io. Add torrent directly by right clicking, view your account informations",
    "permissions": [
        "http://*/",
        "https://*/",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "notifications",
        "tabs",
        "downloads"
    ],
    "web_accessible_resources": [
        "index.html",
        "video.html"
    ],
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://www.google-analytics.com; script-src 'self' 'unsafe-eval'; object-src 'self'"
}